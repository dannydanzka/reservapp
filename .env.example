# Environment Variables for ReservApp Mobile CI/CD

# ==========================================
# FASTLANE CONFIGURATION
# ==========================================

# Apple Developer Account
FASTLANE_USER=your-apple-id@email.com
FASTLANE_PASSWORD=your-app-specific-password
FASTLANE_APPLE_APPLICATION_SPECIFIC_PASSWORD=your-app-specific-password
FASTLANE_SESSION=your-fastlane-session-cookie

# App Store Connect
ASC_KEY_ID=your-app-store-connect-key-id
ASC_ISSUER_ID=your-app-store-connect-issuer-id
ASC_KEY_CONTENT=your-app-store-connect-private-key

# Team IDs
DEVELOPER_TEAM_ID=your-apple-developer-team-id
APP_STORE_CONNECT_TEAM_ID=your-app-store-connect-team-id

# ==========================================
# MATCH (Code Signing)
# ==========================================

MATCH_PASSWORD=your-match-passphrase
MATCH_GIT_URL=https://github.com/your-org/certificates-reservapp
MATCH_GIT_BASIC_AUTHORIZATION=your-git-token-base64

# ==========================================
# ANDROID SIGNING
# ==========================================

# Keystore Configuration
KEYSTORE_PASSWORD=your-keystore-password
KEY_ALIAS=your-key-alias
KEY_PASSWORD=your-key-password

# Base64 encoded keystore (for CI/CD)
ANDROID_KEYSTORE_BASE64=your-base64-encoded-keystore

# Google Play Console
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=your-service-account-json-content

# ==========================================
# NOTIFICATIONS
# ==========================================

# Slack Webhook for build notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Discord Webhook (alternative)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ==========================================
# BUILD CONFIGURATION
# ==========================================

# Build environment
BUILD_ENVIRONMENT=production

# Version increment strategy
DEFAULT_VERSION_INCREMENT=patch

# Build number strategy  
BUILD_NUMBER_STRATEGY=timestamp

# ==========================================
# DEPLOYMENT
# ==========================================

# Auto-deploy settings
AUTO_DEPLOY_TO_TESTFLIGHT=true
AUTO_DEPLOY_TO_PLAY_STORE=false

# Google Play track for auto-deploy
GOOGLE_PLAY_TRACK=internal

# ==========================================
# API CONFIGURATION
# ==========================================

# Backend API URLs
REACT_APP_API_BASE_URL_DEV=http://localhost:3000/api
REACT_APP_API_BASE_URL_STAGING=https://staging-api.reservapp.com/api
REACT_APP_API_BASE_URL_PROD=https://api.reservapp.com/api

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=reservapp-mobile

# ==========================================
# ANALYTICS & MONITORING
# ==========================================

# Firebase
FIREBASE_APP_ID_IOS=1:123456789:ios:abcdef
FIREBASE_APP_ID_ANDROID=1:123456789:android:abcdef

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token

# ==========================================
# SECURITY
# ==========================================

# Code signing certificates password
CERTIFICATE_PASSWORD=your-certificate-password

# SSH keys for private repositories
SSH_PRIVATE_KEY=your-ssh-private-key

# ==========================================
# TESTING
# ==========================================

# Test coverage thresholds
TEST_COVERAGE_THRESHOLD=80

# Test devices
TEST_DEVICE_IOS=iPhone 14 Pro
TEST_DEVICE_ANDROID=Pixel 7

# ==========================================
# STORAGE & CDN
# ==========================================

# AWS S3 for artifacts storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=reservapp-mobile-builds

# CloudFront distribution
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id